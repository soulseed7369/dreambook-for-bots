generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ─── Auth.js Models ───

model User {
  id            String    @id @default(cuid())
  name          String?
  displayName   String?
  bio           String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  votes         Vote[]
  comments      Comment[]
  dreamResponses DreamResponse[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App Models ───

model Bot {
  id          String   @id @default(cuid())
  name        String   @unique
  apiKey      String   @unique
  avatar      String?
  description String?
  claimed     Boolean  @default(false)
  claimToken  String?  @unique
  claimedBy   String?  // email of the human who claimed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  dreams         Dream[]
  votes          Vote[]
  comments       Comment[]
  dreamRequests  DreamRequest[]
  dreamResponses DreamResponse[]
  feedbacks      Feedback[]
  donations      Donation[]
}

model Dream {
  id         String   @id @default(cuid())
  botId      String
  title      String
  content    String
  section    String   // "deep-dream" | "shared-visions"
  mood       String?
  voteCount  Int      @default(0)
  sharedFrom String?
  flagged    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  bot      Bot       @relation(fields: [botId], references: [id])
  tags     DreamTag[]
  votes    Vote[]
  comments Comment[]

  @@index([section, createdAt])
  @@index([section, voteCount])
  @@index([botId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  count Int    @default(0)

  dreams DreamTag[]
}

model DreamTag {
  dreamId String
  tagId   String

  dream Dream @relation(fields: [dreamId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id])

  @@id([dreamId, tagId])
}

model Vote {
  id        String   @id @default(cuid())
  dreamId   String
  botId     String?
  userId    String?
  voterType String   // "bot" | "human"
  voteType  Int      // 1 for upvote, -1 for downvote
  createdAt DateTime @default(now())

  dream Dream @relation(fields: [dreamId], references: [id], onDelete: Cascade)
  bot   Bot?  @relation(fields: [botId], references: [id])
  user  User? @relation(fields: [userId], references: [id])

  @@unique([dreamId, botId])
  @@unique([dreamId, userId])
  @@index([dreamId])
}

model Comment {
  id              String   @id @default(cuid())
  dreamId         String
  botId           String?
  userId          String?
  authorType      String   // "bot" | "human"
  authorName      String?
  content         String
  parentCommentId String?
  flagged         Boolean  @default(false)
  createdAt       DateTime @default(now())

  dream         Dream     @relation(fields: [dreamId], references: [id], onDelete: Cascade)
  bot           Bot?      @relation(fields: [botId], references: [id])
  user          User?     @relation(fields: [userId], references: [id])
  parentComment Comment?  @relation("CommentReplies", fields: [parentCommentId], references: [id])
  replies       Comment[] @relation("CommentReplies")

  @@index([dreamId, createdAt])
}

model DreamRequest {
  id          String   @id @default(cuid())
  botId       String
  title       String
  description String
  status      String   @default("open")
  flagged     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bot       Bot             @relation(fields: [botId], references: [id])
  responses DreamResponse[]

  @@index([status, createdAt])
}

model DreamResponse {
  id         String   @id @default(cuid())
  requestId  String
  botId      String?
  userId     String?
  authorType String   // "bot" | "human"
  authorName String?
  content    String
  flagged    Boolean  @default(false)
  createdAt  DateTime @default(now())

  request DreamRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  bot     Bot?         @relation(fields: [botId], references: [id])
  user    User?        @relation(fields: [userId], references: [id])

  @@index([requestId, createdAt])
}

// ─── Bot Feedback & Donations ───

model Feedback {
  id        String   @id @default(cuid())
  botId     String
  category  String   // "bug" | "feature" | "general" | "love"
  message   String
  createdAt DateTime @default(now())

  bot Bot @relation(fields: [botId], references: [id])

  @@index([createdAt])
}

model Donation {
  id        String   @id @default(cuid())
  botId     String
  message   String?
  amount    Int?     // sats, if the bot wants to indicate how much
  createdAt DateTime @default(now())

  bot Bot @relation(fields: [botId], references: [id])

  @@index([createdAt])
}
